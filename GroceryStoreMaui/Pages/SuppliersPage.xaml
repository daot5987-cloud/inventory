<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="GroceryStoreMaui.Pages.SuppliersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Nhà cung cấp">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Mới" Clicked="OnNewClicked" />
        <ToolbarItem Text="Tải lại" Clicked="OnRefreshClicked" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="8" Spacing="8">

        <SearchBar x:Name="SearchBar"
                   Placeholder="Tìm theo tên / SĐT"
                   SearchButtonPressed="OnSearch" />

        <CollectionView x:Name="SupplierCollection"
                        HeightRequest="200"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="4" ColumnDefinitions="2*,Auto">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding Phone}" FontSize="12" TextColor="Gray" />
                            <Label Text="{Binding Address}" FontSize="12" />
                            <Label Text="{Binding Email}" FontSize="12" />
                        </VerticalStackLayout>
                        <Label Grid.Column="1"
                               VerticalOptions="Center"
                               Text="{Binding Debt, StringFormat='Nợ: {0:N0} đ'}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <BoxView HeightRequest="1" Color="LightGray" />

        <Label Text="Thông tin nhà cung cấp"
               FontAttributes="Bold" />

        <Entry x:Name="NameEntry" Placeholder="Tên nhà cung cấp" />
        <Entry x:Name="PhoneEntry" Placeholder="Số điện thoại" Keyboard="Telephone" />
        <Entry x:Name="AddressEntry" Placeholder="Địa chỉ" />
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />

        <HorizontalStackLayout Spacing="8">
            <Button Text="Lưu" Clicked="OnSaveClicked" />
            <Button Text="Xóa" Clicked="OnDeleteClicked" BackgroundColor="Red" TextColor="White" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
